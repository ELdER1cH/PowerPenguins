                   wrapText="true" BorderPane.alignment="CENTER"/>
         </center>
         <right>
            <VBox BorderPane.alignment="CENTER">
               <children>
                  <ListView fx:id="ReviewList"/>
                  <HBox>
                     <children>
                        <TextField fx:id="reviewTextField" promptText="Review">
                           <HBox.margin>
                              <Insets right="45.0"/>
                           </HBox.margin>
                        </TextField>
                        <Button fx:id="submitReviewButton" mnemonicParsing="false" text="Submit"/>
                     </children>
                     <VBox.margin>
                        <Insets/>
                     </VBox.margin>
                  </HBox>
               </children>
            </VBox>
         </right>
      </BorderPane>
   </children>
</Group>
