<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.Group?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<Group xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/18"
       fx:controller="pinguPinguEat.view.RestaurantGroupController">
   <children>
      <BorderPane>
         <top>
            <BorderPane BorderPane.alignment="CENTER">
               <center>
                  <Label fx:id="restaurantNameLabel" text="Name" BorderPane.alignment="CENTER">
                     <BorderPane.margin>
                        <Insets right="50.0"/>
                     </BorderPane.margin>
                     <font>
                        <Font size="18.0"/>
                     </font>
                  </Label>
               </center>
               <left>
                  <Button fx:id="toMapButton" mnemonicParsing="false" text="Back" BorderPane.alignment="CENTER">
                     <BorderPane.margin>
                        <Insets right="50.0"/>
                     </BorderPane.margin>
                  </Button>
               </left>
               <right>
                  <Button fx:id="toReservationButton" mnemonicParsing="false" text="Reservation"
                          BorderPane.alignment="CENTER"/>
               </right>
            </BorderPane>
         </top>
         <left>
            <VBox BorderPane.alignment="CENTER">
               <children>
                  <Label text="Type">
                     <font>
                        <Font name="System Bold" size="12.0"/>
                     </font>
                  </Label>
                  <Label fx:id="restaurantTypeLabel" text="Restaurant Type"/>
                  <Label text="Rating">
                     <font>
                        <Font name="System Bold" size="12.0"/>
                     </font>
                  </Label>
                  <Label fx:id="restaurantRatingLabel" text="Restaurant Rating"/>
                  <Label text="Expensivness"/>
                  <Label fx:id="restaurantExpensivnessLabel" text="Restaurant Expensivness "/>
               </children>
               <BorderPane.margin>
                  <Insets right="10.0"/>
               </BorderPane.margin>
            </VBox>
         </left>
